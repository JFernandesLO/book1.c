#include <stdio.h>
#include <stdlib.h>

void exercise_1(){
    printf("Inicio do programa\nFim\n");
}
void exercise_2(){
    int num;
    printf("Digite um numero intieiro: ");
    scanf("%d", &num);
    printf("O valor digitado foi: %d\n", num);
}
void exercise_3(){
    int num;
    printf("Digite um numero intieiro: ");
    scanf("%d", &num);
    printf("Valor lido: %d\n", num);
}
void exercise_4(){
    int num;
    printf("Digite um numero inteiro: ");
    scanf("%d", &num);
    printf("O valor digitado foi: %f\n", num);
}
void exercise_5(){
    float num;
    printf("Digite um valor do tipo float: ");
    scanf("%f", &num);
    printf("O valor digitado foi: &d\n", num);
}
void exercise_6(){
    double num;
    printf("Digite um valor do tipo double: ");
    scanf("%lf", &num);
    printf("O valor digitado foi: %e\n", num);
}
void exercise_7(){
    char ch;
    printf("Digite um caractere: ");
    ch = getchar();
    printf("O valor digitado foi de %d\n", ch);
}
void exercise_8(){
    int x, y;
    printf("Digite dois numeros inteiros: ");
    scanf("%d %d", &x, &y);
    printf("Os valores digitados foram, na ordem inversa: %d %d\n", y, x);
}
void exercise_9(){
    float x, y;
    printf("Digite dois numeros do tipo float: ");
    scanf("%f %f", &x, &y);
    printf("Os valores digitados foram, na ordem inversa: %f %f\n", y, x);
}
void exercise_10(){
    int dia, mes, ano;
    printf("Digite os valores para dia mes e ano: ");
    scanf("%d %d %d", &dia, &mes, &ano);
    printf("A data e: %d/&d/%d\n", dia, mes, ano);
}
void exercise_11(){
    #define PI 3.1415926
    printf("PI equals to %f\n", PI);
}
void exercise_12(){
    const int x = 10;
    printf("x equals to %d", x);
}
void exercise_13(){
    char letter;
    printf("Digite um caractere qualquer: ");
    scanf("%c", &letter);
    printf("\"%c\"\n", letter);
}
void exercise_14(){
    char x, y, z;
    scanf("%c %c %c", &x, &y, &z);
    printf("%c\n%c\n%c\n", x, y, z);
}
void exercise_15(){
    char x;
    int y;
    float z;
    scanf("%c %d %f", &x, &y, &z);
    printf("%c %d %f\n", x, y, z);
    printf("%c\t%d\t%f\n", x, y, z);
    printf("%c\n%d\n%f\n", x, y, z);
}
